<div class="card shadow-sm mb-4">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h2 class="h5 mb-0">
      <i class="fas fa-tags me-2 text-primary"></i>
      Categories
    </h2>
    <%= link_to new_admin_category_path, class: 'btn btn-primary btn-sm' do %>
      <i class="fas fa-plus me-1"></i> New Category
    <% end %>
  </div>

  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Parent</th>
            <th>Products</th>
            <th style="width: 120px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <strong><%= category.name %></strong>
                <% if category.subcategories.any? %>
                  <span class="badge bg-info ms-2"><%= category.subcategories.count %></span>
                <% end %>
              </td>
              <td><%= category.parent&.name || "<span class='text-muted'>None</span>".html_safe %></td>
              <td>
                <span class="badge bg-primary"><%= category.products.count %></span>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to admin_category_path(category), class: "btn btn-primary" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_category_path(category), class: "btn btn-success" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to admin_category_path(category), method: :delete, 
                            data: { confirm: 'Are you sure?' }, 
                            class: "btn btn-danger" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
