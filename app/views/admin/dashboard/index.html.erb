<div class="admin-dashboard">
  <!-- Header Section -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold mb-2 d-flex align-items-center">
        <i class="bi bi-speedometer2 me-2 text-primary"></i>
        Admin Dashboard
      </h1>
      <p class="text-muted mb-0 d-flex align-items-center">
        <i class="bi bi-person-circle me-2"></i>
        Welcome back, <%= current_user.name %>! Here's your store overview.
      </p>
    </div>
    <div class="text-end d-flex align-items-center">
      <i class="bi bi-clock-history me-2"></i>
      <small class="text-muted">Last updated: <%= Time.current.strftime("%b %d, %Y %I:%M %p") %></small>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="row mb-5 g-4">
    <div class="col-md-6 col-lg-3">
      <div class="card summary-card shadow-sm border-0">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h6 class="text-uppercase text-muted fw-semibold small mb-2 d-flex align-items-center">
                <i class="bi bi-box-seam me-2"></i>
                Total Products
              </h6>
              <h3 class="mb-0 fw-bold"><%= Product.count %></h3>
            </div>
            <div class="icon-wrapper bg-primary bg-opacity-10">
              <i class="bi bi-graph-up-arrow text-primary"></i>
            </div>
          </div>
          <div class="mt-3">
            <small class="text-success fw-semibold">
              <i class="bi bi-arrow-up"></i> 12% from last month
            </small>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="card summary-card shadow-sm border-0">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h6 class="text-uppercase text-muted fw-semibold small mb-2 d-flex align-items-center">
                <i class="bi bi-cart me-2"></i>
                Total Orders
              </h6>
              <h3 class="mb-0 fw-bold"><%= Order.count %></h3>
            </div>
            <div class="icon-wrapper bg-success bg-opacity-10">
              <i class="bi bi-currency-dollar text-success"></i>
            </div>
          </div>
          <div class="mt-3">
            <small class="text-success fw-semibold">
              <i class="bi bi-arrow-up"></i> 24% from last week
            </small>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="card summary-card shadow-sm border-0">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h6 class="text-uppercase text-muted fw-semibold small mb-2 d-flex align-items-center">
                <i class="bi bi-hourglass-split me-2"></i>
                Pending Orders
              </h6>
              <h3 class="mb-0 fw-bold"><%= Order.where(status: 'pending').count %></h3>
            </div>
            <div class="icon-wrapper bg-warning bg-opacity-10">
              <i class="bi bi-exclamation-triangle text-warning"></i>
            </div>
          </div>
          <div class="mt-3">
            <small class="text-danger fw-semibold">
              <i class="bi bi-arrow-down"></i> 3 urgent
            </small>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="card summary-card shadow-sm border-0">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h6 class="text-uppercase text-muted fw-semibold small mb-2 d-flex align-items-center">
                <i class="bi bi-people me-2"></i>
                Total Users
              </h6>
              <h3 class="mb-0 fw-bold"><%= User.where(role: "user").count %></h3>
            </div>
            <div class="icon-wrapper bg-info bg-opacity-10">
              <i class="bi bi-person-plus text-info"></i>
            </div>
          </div>
          <div class="mt-3">
            <small class="text-success fw-semibold">
              <i class="bi bi-arrow-up"></i> 5 new this week
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mb-5">
    <h4 class="fw-semibold mb-4 d-flex align-items-center">
      <i class="bi bi-lightning-charge-fill text-warning me-2"></i>
      Quick Actions
    </h4>
    <div class="row g-3">
      <div class="col-md-6 col-lg-3">
        <%= link_to admin_products_path, class: "action-card" do %>
          <div class="card h-100 border-0 shadow-sm action-card-hover">
            <div class="card-body text-center p-4">
              <div class="icon-circle bg-primary bg-opacity-10 text-primary mb-3">
                <i class="bi bi-box-seam fs-4"></i>
              </div>
              <h5 class="fw-semibold mb-1">Manage Products</h5>
              <p class="text-muted small mb-0">View and edit all products</p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-6 col-lg-3">
        <%= link_to admin_orders_path, class: "action-card" do %>
          <div class="card h-100 border-0 shadow-sm action-card-hover">
            <div class="card-body text-center p-4">
              <div class="icon-circle bg-success bg-opacity-10 text-success mb-3">
                <i class="bi bi-receipt fs-4"></i>
              </div>
              <h5 class="fw-semibold mb-1">View Orders</h5>
              <p class="text-muted small mb-0">Process and track orders</p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-6 col-lg-3">
        <%= link_to admin_users_path, class: "action-card" do %>
          <div class="card h-100 border-0 shadow-sm action-card-hover">
            <div class="card-body text-center p-4">
              <div class="icon-circle bg-info bg-opacity-10 text-info mb-3">
                <i class="bi bi-people fs-4"></i>
              </div>
              <h5 class="fw-semibold mb-1">Manage Users</h5>
              <p class="text-muted small mb-0">Administer user accounts</p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-6 col-lg-3">
        <%= link_to new_admin_product_path, class: "action-card" do %>
          <div class="card h-100 border-0 shadow-sm action-card-hover">
            <div class="card-body text-center p-4">
              <div class="icon-circle bg-purple bg-opacity-10 text-purple mb-3">
                <i class="bi bi-plus-circle fs-4"></i>
              </div>
              <h5 class="fw-semibold mb-1">Add Product</h5>
              <p class="text-muted small mb-0">Create new product listing</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Activity Section -->
  <div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3 d-flex align-items-center">
      <i class="bi bi-clock-history text-primary me-2 fs-5"></i>
      <h5 class="fw-semibold mb-0">Recent Activity</h5>
    </div>
    <div class="card-body">
      <div class="list-group list-group-flush">
        <%# Sample activity items - replace with real data %>
        <div class="list-group-item border-0 py-3">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="avatar-sm bg-light rounded d-flex align-items-center justify-content-center">
                <i class="bi bi-cart-check fs-4 text-success"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="mb-1">New order #1245 received</h6>
              <p class="text-muted small mb-0">2 minutes ago</p>
            </div>
            <span class="badge bg-success bg-opacity-10 text-success d-flex align-items-center">
              <i class="bi bi-check-circle me-1"></i> Completed
            </span>
          </div>
        </div>
        <div class="list-group-item border-0 py-3">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="avatar-sm bg-light rounded d-flex align-items-center justify-content-center">
                <i class="bi bi-person-plus fs-4 text-info"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="mb-1">New user registered</h6>
              <p class="text-muted small mb-0">15 minutes ago</p>
            </div>
            <span class="badge bg-primary bg-opacity-10 text-primary d-flex align-items-center">
              <i class="bi bi-shield-check me-1"></i> Verified
            </span>
          </div>
        </div>
        <div class="list-group-item border-0 py-3">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="avatar-sm bg-light rounded d-flex align-items-center justify-content-center">
                <i class="bi bi-box-seam fs-4 text-warning"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="mb-1">Product "Summer Dress" updated</h6>
              <p class="text-muted small mb-0">1 hour ago</p>
            </div>
            <span class="badge bg-warning bg-opacity-10 text-warning d-flex align-items-center">
              <i class="bi bi-hourglass-split me-1"></i> Pending
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .admin-dashboard {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1.5rem;
  }

  .summary-card {
    border-radius: 12px;
    border: none;
    transition: all 0.3s ease;
  }

  .summary-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
  }

  .icon-wrapper {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .action-card-hover {
    transition: all 0.3s ease;
  }

  .action-card-hover:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    border-color: rgba(var(--bs-primary-rgb), 0.2) !important;
  }

  .icon-circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .action-card:hover .icon-circle {
    transform: scale(1.1);
  }

  .avatar-sm {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bg-purple {
    background-color: #6f42c1;
  }
  
  .text-purple {
    color: #6f42c1;
  }

  @media (max-width: 768px) {
    .admin-dashboard {
      padding: 1rem;
    }
  }
</style>
