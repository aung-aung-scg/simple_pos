<h1 class="mb-4 fw-bold">Admin Dashboard</h1>
<p class="text-muted mb-5">Welcome back! Here’s a quick summary of what’s happening in your store.</p>

<!-- Summary Cards -->
<div class="row mb-4 g-4">
  <div class="col-md-3">
    <div class="card text-bg-primary shadow-sm">
      <div class="card-body">
        <h6 class="card-title text-uppercase fw-semibold">Total Products</h6>
        <p class="display-6 mb-0"><%= Product.count %></p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-bg-success shadow-sm">
      <div class="card-body">
        <h6 class="card-title text-uppercase fw-semibold">Total Orders</h6>
        <p class="display-6 mb-0"><%= Order.count %></p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-bg-warning shadow-sm">
      <div class="card-body">
        <h6 class="card-title text-uppercase fw-semibold">Pending Orders</h6>
        <p class="display-6 mb-0"><%= Order.count %></p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-bg-dark shadow-sm">
      <div class="card-body">
        <h6 class="card-title text-uppercase fw-semibold">Users</h6>
        <p class="display-6 mb-0"><%= User.where(role: "user").count %></p>
      </div>
    </div>
  </div>
</div>

<!-- Quick Actions -->
<h4 class="mb-3">Quick Actions</h4>
<div class="row g-3">
  <div class="col-md-3">
    <%= link_to admin_products_path, class: "btn btn-primary w-100 py-3 shadow-sm" do %>
      <i class="bi bi-box-seam me-2"></i> Manage Products
    <% end %>
  </div>

  <div class="col-md-3">
    <%= link_to admin_orders_path, class: "btn btn-success w-100 py-3 shadow-sm" do %>
      <i class="bi bi-receipt me-2"></i> View Orders
    <% end %>
  </div>

  <div class="col-md-3">
    <%= link_to admin_users_path, class: "btn btn-dark w-100 py-3 shadow-sm" do %>
      <i class="bi bi-people me-2"></i> Manage Users
    <% end %>
  </div>

  <div class="col-md-3">
    <%= link_to new_admin_product_path, class: "btn btn-info w-100 py-3 shadow-sm" do %>
      <i class="bi bi-plus-circle me-2"></i> Add Product
    <% end %>
  </div>
</div>
