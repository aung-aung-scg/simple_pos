<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title"><i class="fas fa-boxes me-2"></i> Product List</h1>
    <%= link_to 'New Product', new_admin_product_path, class: 'btn btn-success btn-sm' %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th style="width: 40px;">#</th>
              <th>Product Name</th>
              <th>Description</th>
              <th style="width: 120px;">Price</th>
              <th style="width: 320px;">Variants</th>
              <th style="width: 130px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each_with_index do |product, index| %>
              <tr>
                <td class="text-muted"><%= index + 1 %></td>
                <td><strong><%= product.name %></strong></td>
                <td><small class="text-muted"><%= truncate(product.description, length: 50) %></small></td>
                <td class="text-success"><strong><%= number_to_currency(product.price, unit: "MMK") %></strong></td>

                <td style="max-height: 180px; overflow-y: auto; padding: 0.25rem;">
                  <% if product.product_variants.any? %>
                    <% product.product_variants.each do |variant| %>
                      <div class="card mb-2 p-2 shadow-sm">
                        <div class="d-flex align-items-center">
                          <% if variant.image.attached? %>
                            <%= image_tag variant.image.variant(resize_to_limit: [50, 50]),
                                          class: "img-thumbnail me-3", style: "width: 50px; height: 50px; object-fit: cover;" %>
                          <% else %>
                            <div class="bg-light border text-center me-3" style="width:50px; height:50px; line-height:50px; font-size:0.8rem; color:#999;">
                              No Image
                            </div>
                          <% end %>
                          <div>
                            <div><strong>Color:</strong> <span class="badge" style="background-color: <%= variant.color.downcase == 'black' ? '#000' : variant.color.downcase %>; color: <%= variant.color.downcase == 'black' ? '#fff' : '#000' %>"><%= variant.color %></span></div>
                            <div><strong>Size:</strong> <%= variant.size %></div>
                            <div class="stock-indicator <%= variant.stock > 10 ? 'text-success' : 'text-danger' %>">
                              <small><strong>Stock:</strong> <%= variant.stock %></small>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% else %>
                    <span class="badge bg-secondary">No variants</span>
                  <% end %>
                </td>

                <td>
                  <div class="btn-group btn-group-sm" role="group">
                    <%= link_to admin_product_path(product),
                                class: "btn btn-light border",
                                title: "View Details",
                                data: { bs_toggle: "tooltip" } do %>
                      <i class="fas fa-eye text-primary"></i>
                    <% end %>

                    <%= link_to edit_admin_product_path(product),
                                class: "btn btn-light border",
                                title: "Edit Product",
                                data: { bs_toggle: "tooltip" } do %>
                      <i class="fas fa-edit text-success"></i>
                    <% end %>

                    <%= button_to admin_product_path(product),
                                method: :delete,
                                form: { class: "d-inline", data: { turbo_confirm: "Are you sure you want to delete this product?" } },
                                class: "btn btn-light border",
                                title: "Delete Product",
                                data: { bs_toggle: "tooltip" } do %>
                      <i class="fas fa-trash-alt text-danger"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if @products.empty? %>
    <div class="text-center py-5">
      <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
      <h4 class="text-muted">No products found</h4>
      <%= link_to 'Add your first product', new_admin_product_path, class: 'btn btn-success mt-3' %>
    </div>
  <% end %>
</div>
