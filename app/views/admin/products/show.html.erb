<div class="container product-details">
  <div class="row mb-4">
    <div class="col">
      <h1 class="display-5 fw-bold text-primary">
        <i class="fas fa-cube me-2"></i>Product Details
      </h1>
      <hr class="my-3">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8"><%= @product.name %></dd>

                <dt class="col-sm-4">Price:</dt>
                <dd class="col-sm-8"><%= number_to_currency(@product.price, unit: "MMK") %></dd>

                <dt class="col-sm-4">Stock:</dt>
                <dd class="col-sm-8">
                  <%= @product.stock %>
                  <span class="badge <%= @product.stock > 0 ? 'bg-success' : 'bg-danger' %> ms-2">
                    <%= @product.stock > 0 ? 'In Stock' : 'Out of Stock' %>
                  </span>
                </dd>
              </dl>
            </div>

            <% if @product.image.attached? %>
              <div class="col-md-6 text-center">
                <div class="image-preview mb-3">
                  <%= link_to url_for(@product.image), target: "_blank", class: "d-inline-block" do %>
                    <%= image_tag @product.image.variant(resize_to_limit: [300, 300]), 
                                  class: "img-fluid rounded border", 
                                  alt: @product.name %>
                  <% end %>
                  <small class="text-muted d-block mt-1">Click to view full size</small>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to admin_products_path, class: "btn btn-secondary me-2" do %>
          <i class="fas fa-arrow-left me-1"></i> Back to Products
        <% end %>
        
        <%= link_to edit_admin_product_path(@product), class: "btn btn-primary" do %>
          <i class="fas fa-edit me-1"></i> Edit Product
        <% end %>
      </div>
    </div>
  </div>
</div>