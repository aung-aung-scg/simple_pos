<h1 class="text-center mb-4">Users</h1>

<div class="mb-3">
  <%= link_to "New User", new_admin_user_path, class: "btn btn-success" %>
</div>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th class="text-end">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td class="text-end">
          <%= link_to "Show", admin_user_path(user), class: "btn btn-sm btn-info me-1" %>
          <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-warning me-1" %>
          <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
