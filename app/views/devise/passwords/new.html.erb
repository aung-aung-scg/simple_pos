<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center py-3">
          <h2 class="h4 mb-0">
            <i class="fas fa-key me-2"></i>
            Password Reset
          </h2>
        </div>
        
        <div class="card-body p-4 p-md-5">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
                      html: { class: "needs-validation", novalidate: true }) do |f| %>
            
            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
                <%= f.email_field :email, class: "form-control form-control-lg", 
                    autofocus: true, required: true,
                    placeholder: "Enter your registered email" %>
              </div>
              <div class="form-text text-muted">
                We'll send you a link to reset your password
              </div>
            </div>

            <div class="d-grid mb-4">
              <%= f.button type: "submit", class: "btn btn-primary btn-lg fw-bold py-3" do %>
                <i class="fas fa-paper-plane me-2"></i>
                Send Reset Instructions
              <% end %>
            </div>
          <% end %>

          <div class="text-center pt-3 border-top">
            <p class="mb-2">
              Remember your password?
              <%= link_to "Sign in here", new_user_session_path, class: "fw-bold" %>
            </p>
            <p class="mb-0">
              Need an account?
              <%= link_to "Create one", new_user_registration_path, class: "text-decoration-none" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
.card {
  border-radius: 0.75rem;
}

.input-group-text {
  background-color: #f8f9fa;
}

.btn-primary {
  transition: all 0.3s ease;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
</style>