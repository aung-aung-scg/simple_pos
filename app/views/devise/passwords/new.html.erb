# app/views/devise/passwords/new.html.erb
<div class="card shadow-sm">
  <div class="card-body p-5">
    <h2 class="card-title mb-4">Forgot your password?</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", autofocus: true, required: true %>
      </div>

      <div class="d-grid">
        <%= f.submit "Send reset instructions", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "Back to login", new_user_session_path %>
    </div>
  </div>
</div>