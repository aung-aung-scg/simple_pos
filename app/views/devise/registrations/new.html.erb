<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white py-4">
          <h1 class="h4 mb-0 text-center">
            <i class="fas fa-user-plus me-2"></i><%= t('devise.registrations.new.sign_up') %>
          </h1>
        </div>
        
        <!-- Card Body -->
        <div class="card-body p-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Name Field -->
            <div class="mb-4">
              <%= f.label :name, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-user"></i>
                </span>
                <%= f.text_field :name, class: "form-control py-2", autofocus: true, required: true %>
              </div>
              <div class="invalid-feedback">
                <%= t('errors.messages.blank') %>
              </div>
            </div>

            <!-- Email Field -->
            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
                <%= f.email_field :email, class: "form-control py-2", autocomplete: "email", required: true %>
              </div>
              <div class="invalid-feedback">
                <%= t('errors.messages.blank') %>
              </div>
            </div>

            <!-- Phone Field -->
            <div class="mb-4">
              <%= f.label :phone, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-phone"></i>
                </span>
                <%= f.text_field :phone, class: "form-control py-2", required: true %>
              </div>
              <div class="invalid-feedback">
                <%= t('errors.messages.blank') %>
              </div>
            </div>

            <!-- Address Field -->
            <div class="mb-4">
              <%= f.label :address, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-map-marker-alt"></i>
                </span>
                <%= f.text_area :address, class: "form-control py-2", rows: 3, required: true %>
              </div>
              <div class="invalid-feedback">
                <%= t('errors.messages.blank') %>
              </div>
            </div>

            <!-- Password Field -->
            <div class="mb-4">
              <%= f.label :password, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
                <%= f.password_field :password, class: "form-control py-2", autocomplete: "new-password", required: true %>
              </div>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">
                  <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
                </small>
              <% end %>
              <div class="invalid-feedback">
                <%= t('errors.messages.blank') %>
              </div>
            </div>

            <!-- Password Confirmation Field -->
            <div class="mb-4">
              <%= f.label :password_confirmation, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
                <%= f.password_field :password_confirmation, class: "form-control py-2", autocomplete: "new-password", required: true %>
              </div>
              <div class="invalid-feedback">
                <%= t('errors.messages.blank') %>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit t('devise.registrations.new.sign_up'), class: "btn btn-primary btn-lg py-2 fw-bold" %>
            </div>
          <% end %>

          <!-- Devise Shared Links -->
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
