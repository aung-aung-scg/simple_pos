<h1 class="mb-4">Order History</h1>

<% if @orders.any? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Total Price (MMK)</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= number_with_delimiter(order.total_price) %></td>
          <td>Completed</td>
          <td><%= link_to "View", order_path(order), class: "btn btn-sm btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no orders yet.</p>
<% end %>
