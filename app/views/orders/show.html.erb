<h1>Order #<%= @order.id %></h1>
<p><strong>Date:</strong> <%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></p>
<p><strong>Total:</strong> MMK <%= number_with_delimiter(@order.total_price) %></p>

<h3 class="mt-4">Items</h3>
<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price (MMK)</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_with_delimiter(item.product.price * item.quantity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
