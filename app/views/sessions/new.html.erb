<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white py-4">
          <h1 class="h4 mb-0 text-center">
            <i class="fas fa-sign-in-alt me-2"></i><%= t('devise.sessions.new.sign_in') %>
          </h1>
        </div>
        
        <!-- Card Body -->
        <div class="card-body p-5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <!-- Email Field -->
            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
                <%= f.email_field :email, class: "form-control py-2", autofocus: true, autocomplete: "email", required: true %>
              </div>
              <div class="invalid-feedback">
                <%= t('errors.messages.blank') %>
              </div>
            </div>

            <!-- Password Field -->
            <div class="mb-4">
              <%= f.label :password, class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
                <%= f.password_field :password, class: "form-control py-2", autocomplete: "current-password", required: true %>
              </div>
              <div class="invalid-feedback">
                <%= t('errors.messages.blank') %>
              </div>
            </div>

            <!-- Remember Me Checkbox -->
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit t('devise.sessions.new.sign_in'), class: "btn btn-primary btn-lg py-2 fw-bold" %>
            </div>
          <% end %>

          <!-- Devise Shared Links -->
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>